---
active_page: Links
id: 1
description: Collection of links to websites recommended by the website author
---

{% extends "../elements/layout.njk" %}
{% block content %}
  <div class="gap-4 p-4 text-danube-200 flex grow flex-col">
    <div
      class="gap-4 md:grid-cols-2 lg:grid-cols-3 2xl:grid-cols-4 grid grid-cols-1"
    >
      {%- for current_element in links %}
        <a
          href="{{ current_element['link'] }}"
          target="_blank"
        >
          <div
            class="group h-20 rounded-md bg-danube-900 shadow-md shadow-rangoon_green-500 ease-in-out hover:bg-opium-900 flex flex-row overflow-hidden transition duration-500"
          >
            <img
              class="ease-in-out float-left aspect-square scale-100 object-cover saturate-0 transition duration-500 group-hover:scale-110 group-hover:saturate-150"
              src="{{ current_element['img'] }}"
              alt=""
              eleventy:widths="160"
            />
            <div class="p-2 flex grow flex-col content-center justify-center">
              <div class="text-center">{{ current_element['title'] }}</div>
              <div class="text-rangoon_green-400 text-center italic">
                {{ current_element['desc'] }}
              </div>
            </div>
          </div>
        </a>
      {%- endfor %}
    </div>
  </div>
{%- endblock %}
