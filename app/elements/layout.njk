{% set css %}{% include "../static/css/tailwind.css" %}{% endset %}
{# Empty page that's shared across ALL pages, with every page adding their own content #}
{# Basically the more repeating stuff it takes from individual pages, the better #}
<!DOCTYPE html>
<html
  lang="en"
  class="scroll-smooth"
>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    />
    {# Front Matter consumer #}
    <meta
      name="description"
      content="{{ description }}"
    />
    {# Fast fonts blob #}
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Noto+Sans&display=swap"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Noto+Sans&display=swap"
        rel="stylesheet"
        type="text/css"
      />
    </noscript>
    {# CSS blob #}
    <!-- prettier-ignore-start -->
    <style>
	    {{ css | cssmin | safe }}
    </style>
    <!-- prettier-ignore-end -->
    {# Alpine Plugins #}
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/@alpinejs/collapse@3.x.x/dist/cdn.min.js"
    ></script>
    {# Alpine #}
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"
    ></script>
    {# Front Matter consumer #}
    <title>{{ active_page }} - SX_7</title>
    {# Could be optimized, but this way it's responsive and works on most #}
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="{{ '../static/favicon-x16.png' | url }}"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="{{ '../static/favicon-x32.png' | url }}"
    />
    <link
      rel="icon"
      type="image/x-icon"
      sizes="48x48"
      href="{{ '../static/favicon.ico' | url }}"
    />
    <link
      rel="shortcut icon"
      type="image/x-icon"
      sizes="48x48"
      href="{{ '../static/favicon.ico' | url }}"
    />
  </head>
  <body
    class="bg-slate-950 font-noto bg-[url(../static/topography.svg)] bg-size-[2000px]"
  >
    <div class="flex min-h-screen flex-col">
      {# Nav bar #}
      <nav
        class="bg-danube-950 shadow-rangoon_green-800 top-0 gap-2 rounded-b p-2 shadow-md sticky z-50 flex w-full flex-row items-center justify-center"
      >
        {# https://laracasts.com/discuss/channels/javascript/alpine-js-cant-x-bind-styles-inline #}
        {%- for direction_data in pages %}
          <div
            x-data=""
            class="text-md p-2 hover:text-danube-600 {{ 'text-opium-400' if direction_data['id']==id else 'text-danube-200' }} cursor-pointer text-center subpixel-antialiased transition duration-500 select-none"
            @click="location.href='{{ direction_data['path'] }}'"
          >
            {{ direction_data['title'] }}
          </div>
        {%- endfor %}
      </nav>
      {# Content, since this is a child template and not parent one, interestingly #}
      <main class="flex grow flex-col">
        {%- block content %}
        {% endblock %}
      </main>
    </div>
  </body>
</html>
