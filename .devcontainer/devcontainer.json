{
  "name": "pers-website",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "files.exclude": {
          "**/.git": true,
          "**/.svn": true,
          "**/.hg": true,
          "**/.DS_Store": true,
          "**/Thumbs.db": true,
          "**/*.crswap": true,
          ".devcontainer": true,
          ".github": true,
          ".husky": true,
          ".gitignore": true,
          ".prettierignore": true,
          "firebase.json": true,
          "LICENSE": true,
          "package-lock.json": true,
          "node_modules": true
        }
      },
      "extensions": [
        "esbenp.prettier-vscode",
        "eseom.nunjucks-template",
        "github.vscode-pull-request-github",
        "amodio.toggle-excluded-files"
      ]
    }
  }
}
