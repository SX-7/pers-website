{
  "name": "pers-website",
  "description": "Code for my own portfolio/personal website.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SX-7/pers-website.git"
  },
  "author": "SX-7",
  "license": "MIT",
  "private": "true",
  "bugs": {
    "url": "https://github.com/SX-7/pers-website/issues"
  },
  "homepage": "https://github.com/SX-7/pers-website#readme",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^6.0.4",
    "@11ty/eleventy-navigation": "^1.0.5",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "@11ty/eleventy-plugin-vite": "^7.0.0",
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "bundlemon": "^3.1.0",
    "cross-env": "^10.1.0",
    "cssnano": "^7.1.2",
    "firebase-tools": "^15.8.0",
    "html-minifier-terser": "^7.2.0",
    "html-validate": "^10.7.0",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.1",
    "linkinator": "^7.5.3",
    "lint-staged": "^16.2.7",
    "markdown-it": "^14.1.1",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-jinja-template": "^2.1.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "vite-plugin-image-optimizer": "^2.0.3"
  },
  "scripts": {
    "start": "eleventy --serve --config=config/.eleventy.js",
    "start:tailwind": "tailwindcss -i ./src/_includes/css/style.css -o ./src/_includes/css/tailwind.css --watch",
    "build:css": "tailwindcss -i ./src/_includes/css/style.css -o ./src/_includes/css/tailwind.css",
    "build:css:prod": "tailwindcss -i ./src/_includes/css/style.css -o ./src/_includes/css/tailwind.css --minify",
    "build:html": "eleventy --config=config/.eleventy.js",
    "build": "npm run build:css && npm run build:html",
    "build:prod": "cross-env NODE_ENV=production npm run build:css:prod && cross-env NODE_ENV=production npm run build:html",
    "lint:prettier": "prettier --check \"**/*.{js,css,njk,html,md,json}\"",
    "lint:prettier:fix": "prettier --write \"**/*.{js,css,njk,html,md,json}\"",
    "lint:html": "html-validate \"_site/**/*.html\"",
    "test:quality": "npm run build:prod && npm run lint:prettier && npm run lint:html",
    "test:links": "linkinator ./_site --recurse --skip .github/workflows/linkcheck-ignore.txt",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,md,njk,html}": [
      "prettier --write"
    ]
  },
  "htmlvalidate": {
    "extends": [
      "html-validate:recommended"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "bracketSameLine": false,
    "bracketSpacing": true,
    "objectWrap": "preserve",
    "quoteProps": "consistent",
    "singleAttributePerLine": true,
    "plugins": [
      "prettier-plugin-tailwindcss",
      "prettier-plugin-jinja-template"
    ],
    "tailwindStylesheet": "./src/_includes/css/tailwind.css",
    "overrides": [
      {
        "files": [
          "*.njk"
        ],
        "options": {
          "parser": "jinja-template"
        }
      }
    ]
  }
}
